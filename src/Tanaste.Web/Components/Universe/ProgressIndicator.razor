@namespace Tanaste.Web.Components.Universe

@* Reusable progress card for the Last Journey hero tile.
   Displays: icon, primary value, progress bar, label. *@

<div class="progress-card">
    <MudStack Row="true" AlignItems="AlignItems.Center" Spacing="2" Class="mb-1">
        <MudIcon Icon="@Icon" Size="Size.Small"
                 Style="color: rgba(255,255,255,0.60); font-size: 20px;" />
        <MudText Typo="Typo.body1" Style="font-weight: 600;">
            @Value
        </MudText>
    </MudStack>

    <MudProgressLinear Value="@Percent" Color="Color.Warning" Rounded="true"
                       Size="Size.Small" Class="mb-1"
                       Style="height: 4px;" />

    <MudText Typo="Typo.caption" Style="color: rgba(255,255,255,0.45);">
        @Label
    </MudText>
</div>

@code {
    /// <summary>Material icon string (e.g. Icons.Material.Filled.PlayCircle).</summary>
    [Parameter] public string Icon { get; set; } = Icons.Material.Filled.HelpOutline;

    /// <summary>Primary display value (e.g. "65%", "Page 212", "1h 12m remaining").</summary>
    [Parameter] public string Value { get; set; } = "—";

    /// <summary>Progress percentage 0–100 for the bar.</summary>
    [Parameter] public double Percent { get; set; }

    /// <summary>Label below the bar (e.g. "Watch: Fellowship", "Read: novel").</summary>
    [Parameter] public string Label { get; set; } = "";
}

<style>
    .progress-card {
        background: rgba(255, 255, 255, 0.06);
        border: 1px solid rgba(255, 255, 255, 0.08);
        border-radius: 16px;
        padding: 12px 16px;
        min-width: 140px;
        flex: 1;
    }
</style>
