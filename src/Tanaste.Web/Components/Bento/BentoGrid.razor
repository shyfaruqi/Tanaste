@namespace Tanaste.Web.Components.Bento

@* Asymmetric Bento-grid container (Section 2.2 of the UI ASD).
   Renders child BentoItems inside a CSS grid with variable column/row spans. *@

<div class="bento-grid @Class" style="@Style">
    @ChildContent
</div>

@code {
    [Parameter] public RenderFragment? ChildContent { get; set; }
    [Parameter] public string?         Class        { get; set; }
    [Parameter] public string?         Style        { get; set; }
}

<style>
    /* Default: fluid auto-fill grid */
    .bento-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
        gap: 20px;
        width: 100%;
        padding-bottom: 100px;   /* clearance for the floating Intent Dock */
    }

    /* Desktop: force 3-column layout (tiles are wider in Spatial Bento) */
    @@media (min-width: 960px) {
        .bento-grid {
            grid-template-columns: repeat(3, 1fr);
        }
    }

    /* Mobile â€” single-column stack; ColSpan/RowSpan are reset so the hero tile
       does not dominate a narrow screen. */
    @@media (max-width: 600px) {
        .bento-grid {
            grid-template-columns: 1fr;
        }

        .bento-grid .bento-item {
            grid-column: span 1 !important;
            grid-row:    span 1 !important;
        }
    }
</style>
